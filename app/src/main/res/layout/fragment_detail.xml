<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:scrollbars="vertical"
    tools:context=".fragment.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!--        TEMPAT TANGGAL LAHIR-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Tempat Tanggal Lahir"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/ttl_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Umadiwang, 04 Mei 1999"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!--        KABUPATEN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Kabupaten"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/kabupaten_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Tabanan"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!--        KECAMATAN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Kecamatan"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/kecamatan_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Tabanan"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!--        DESA-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Desa"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/desa_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Tabanan"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!--        ALAMAT-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Alamat"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/alamat_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Tabanan, Bali, Indonesia"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!--        JENIS KELAMIN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Jenis Kelamin"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/jenis_kelamin_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Perempuan"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!--        AGAMA-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Agama"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/agama_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Hindu"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!--        GOLONGAN DARAH-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Golongan Darah"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/gol_darah_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <!--        STATUS PERKAWINAN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Status Perkawinan"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/status_perkawinan_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Belum Kawin"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!--        PEKERJAANN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Pekerjaan"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/pekerjaan_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Mahasiswa"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!--        KEWARGANEGARAAN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Kewarganegaraan"
                android:textColor="@color/tosca"
                android:textSize="8pt"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardBackgroundColor="@color/ungu"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/kewarganegaraan_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="WNI"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>